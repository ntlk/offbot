!!!
%html
	%head
		%title Office Robot
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags

	%body

		#header_o
			#header_i
				%h1= link_to 'offbott', root_url
				#header_login
					- if person_signed_in?
						= link_to 'Your Projects', root_url
						&nbsp;
						= link_to 'Sign Out', destroy_person_session_path, :method => :delete        
					- else
						= link_to 'Sign In', new_person_session_path 
						&nbsp;
						= link_to 'Register', new_person_registration_path
		
		#container_o
			#container_i
		
				= yield